#!/usr/bin/env bash
: <<'COPYRIGHT'
 Copyright (c) Vaimo Group. All rights reserved.
 See LICENSE_VAIMO.txt for license details.
COPYRIGHT

vendor/bin/phpcs -p src

result=${?}

if [ ${result} -gt 0 ] ; then
    exit 1
fi

vendor/bin/phpmd src text phpmd.xml --suffixes php

result=${?}

if [ ${result} -gt 0 ] ; then
    exit 1
fi
